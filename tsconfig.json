{
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./dist",
		"module": "ESNext",
		"target": "es2022",
		"lib": ["es2022"],
		"types": ["node", "vitest/globals"],
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src", "tests"],
	"exclude": ["node_modules", "dist", "*.config.ts"]
}
